[core]
	editor = vim
	autocrlf = input
	excludesfile = ~/.config/git/gitignore_global
	pager = less -FRX
	quotepath = false
	fsmonitor = true
	untrackedCache = true

[init]
	defaultBranch = main

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = true
	ff = only

[merge]
	tool = vimdiff
	conflictstyle = diff3
	ff = only

[diff]
	colorMoved = default
	algorithm = histogram
	indentHeuristic = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	# Basic shortcuts
	co = checkout
	br = branch
	ci = commit
	st = status
	
	# More complex aliases
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = !gitk
	
	# Pretty logging
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lol = log --graph --decorate --pretty=oneline --abbrev-commit
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	
	# Show files in a commit
	show-files = show --pretty="" --name-only
	
	# Undo last commit but keep changes
	undo = reset --soft HEAD^
	
	# Clean up merged branches
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

[branch]
	autosetuprebase = always

[rerere]
	enabled = true

[help]
	autocorrect = 1

[gpg]
	format = ssh

[commit]
	gpgsign = true

[user]
    signingkey = ~/.ssh/id_ed25519.pub

[include]
	# Include local git config for user info and machine-specific settings
	path = ~/.config/git/local.gitconfig
